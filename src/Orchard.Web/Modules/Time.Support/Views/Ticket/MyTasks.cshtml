@model IEnumerable<Time.Data.EntityModels.TimeMFG.TicketTask>

@{
    //ViewBag.Title = "Support Home";
}

@*<h2>@ViewBag.Title</h2>*@

<div class="container">
    <div class="row">
        @Html.Action("SideBar")

        <div class="col-md-8 col-sm-8 col-xs-8">
            <div class="row">
                <div class="col-md-5"><h4>@ViewBag.Title</h4></div>
                <div class="col-md-5"><h4>@ViewBag.SubTitle</h4></div>
            </div>
            <div class="row">
                <div class="col-md-5"><i>@Model.Count() tickets</i></div>
            </div>
            <hr />
            <div class="form-group">
                @using (Html.BeginForm("Search", "Ticket"))
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-md-6">
                            @Html.TextBox("Search")
                        </div>
                        <div class="col-md-2">
                            <input type="submit" value="Search" class="btn btn-primary" />
                        </div>
                        <div class="col-md-2">
                            @Html.CheckBox("IncludeComplete") Include Completed
                        </div>
                    </div>
                    <hr />
                }
            </div>
        </div>

        <div class="col-md-8 col-sm-8 col-xs-8">
            <div class="row">
                <div class="col-md-3">
                    <b>Ticket</b>
                </div>
                <div class="col-md-4">
                    <b>Task</b>
                </div>
                <div class="col-md-4">
                    <b>Notes</b>
                </div>
                <div class="col-md-1">
                    <b>Completed</b>
                </div>
            </div>

            <br />

            @foreach (var item in Model)
            {
                @Html.Partial("_TicketTask", item)
            }
        </div>
    </div>
</div>