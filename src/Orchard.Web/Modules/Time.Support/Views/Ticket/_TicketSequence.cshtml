@model Time.Data.EntityModels.TimeMFG.TicketProject


@if (Request.Url.AbsoluteUri.Contains("/Support/Ticket/MyOpenTickets"))
{
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        @Html.HiddenFor(model => model.TicketID)
        @Html.HiddenFor(model => model.DepartmentID)
        @Html.HiddenFor(model => model.PriorityID)
        @Html.HiddenFor(model => model.CategoryID)
        @Html.HiddenFor(model => model.Title)
        @Html.HiddenFor(model => model.Description)
        @Html.HiddenFor(model => model.Notes)
        @Html.HiddenFor(model => model.PrivateNotes)
        @Html.HiddenFor(model => model.RequestedBy)
        @Html.HiddenFor(model => model.RequestedByFriendly)
        @Html.HiddenFor(model => model.RequestedDate)
        @Html.HiddenFor(model => model.AssignedEmployeeID)
        @Html.HiddenFor(model => model.ResourceEmployeeID)
        @Html.HiddenFor(model => model.Status)
        @Html.HiddenFor(model => model.ApprovalDate)
        @Html.HiddenFor(model => model.ApprovedBy)
        @Html.HiddenFor(model => model.ProjectBeginDate)
        @Html.HiddenFor(model => model.ProjectEndDate)
        @Html.HiddenFor(model => model.TicketSequence)
        @Html.HiddenFor(model => model.CompletionDate)
        @Html.HiddenFor(model => model.ApprovalCode)
        @Html.HiddenFor(model => model.Focused)
        @Html.HiddenFor(model => model.DateLastChanged)

        if (Model.TicketSequence != 1 && Model.TicketSequence > 0)
        {
            <button type="submit" name="command" value="UpArrow"><img src="~/Media/Default/Page/greenarrowup.jpg" /></button>
            <button type="submit" name="command" value="DownArrow"><img src="~/Media/Default/Page/greenarrowdown.jpg" /></button>
        }
        else if (Model.TicketSequence == null)
        {
            <button type="submit" name="command" value="UpArrow"><img src="~/Media/Default/Page/greenarrowup.jpg" /></button>
        }
        else
        {
            <button type="submit" name="command" value="DownArrow"><img src="~/Media/Default/Page/greenarrowdown.jpg" /></button>
        }
        <span class="bg-info">Priority: @Html.DisplayFor(model => model.TicketSequence)</span>
    }
}
else
{

}
