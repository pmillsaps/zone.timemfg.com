@model Time.Data.EntityModels.TimeMFG.TicketTask

@{
    ViewBag.Title = "Delete Task";
}
<div class="container">
    <div class="row">

        @Html.Action("SideBar")

        <div class="col-md-9 col-sm-9 col-xs-9">
            <div class="row">
                <h2>@ViewBag.Title</h2>
            </div>
            <div class="row">
                <hr />
            </div>

            <h3>Are you sure you want to delete this?</h3>
            <div>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Task)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Task)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Completed)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Completed)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.CompletionDate)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.CompletionDate)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Notes)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Notes)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.TicketEmployee.LastName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TicketEmployee.LastName)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.TicketProject.Title)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TicketProject.Title)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete Task" class="btn btn-danger" /> |
                        @Html.ActionLink("Cancel", "Index")
                    </div>
                }
            </div>

        </div>
    </div>
</div>