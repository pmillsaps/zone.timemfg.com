@model IEnumerable<Time.Support.EntityModels.TimeMfg.TicketProject>

@{
    //ViewBag.Title = "Support Home";
}

@*<h2>@ViewBag.Title</h2>*@

<div class="container">
    <div class="row">
        @Html.Action("SideBar")

        <div class="col-md-8 col-sm-8 col-xs-8">
            <div class="row">
                <div class="col-md-5"><h4>@ViewBag.Title</h4></div>
                <div class="col-md-5"><h4>@ViewBag.SubTitle</h4></div>
            </div>
            <div class="row">
                <div class="col-md-5"><i>@Model.Count() tickets</i></div>
            </div>
            <br />
            <div class="form-group">
                @using (Html.BeginForm("Search", "Ticket"))
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        @*<div class="col-md-1">Search:</div>*@
                        <div class="col-md-9">@Html.TextBox("Search")</div>
                    </div>
                    <div class="row">
                        @*<div class="col-md-1">&nbsp;</div>*@
                        <div class="col-md-2">
                            <input type="submit" value="Search" />
                        </div>
                        <div class="col-md-4">
                            @Html.CheckBox("IncludeComplete") Include Completed
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="col-md-8 col-sm-8 col-xs-8">
            @foreach (var item in Model)
            {
                @Html.Partial("_Ticket", item)
            }
        </div>
    </div>
</div>