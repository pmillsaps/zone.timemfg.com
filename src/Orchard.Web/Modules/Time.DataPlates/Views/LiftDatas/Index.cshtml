@model IEnumerable<Time.Data.EntityModels.DataPlates.LiftData>

@{
    ViewBag.Title = "Lift Data Index";
}

<h2>@ViewBag.Title</h2>

<div align="left">
    <p>
        @Html.ActionLink("Back to DataPlates Index", "Index", "Home")
    </p>
</div>

<p>
    @Html.ActionLink("Create New Lift Data", "Create")
</p>
<hr />
@using (Html.BeginForm("Index", "LiftDatas", FormMethod.Get))
{
    <div class="row">
        <div class="col-md-4">
            <div class="input-group">
                @Html.TextBox("search", null, new { @placeholder = "Search by Lift..." })
                <span class="input-group-btn">
                    <button class="btn btn-primary" type="submit">Go!</button>
                </span>
            </div>
        </div>
    </div>
}
<hr />
<table class="table table-striped table-bordered table-condensed table-hover">
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.Lift)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HydOilPSI)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HydOilKG)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Insulated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DesignVoltage)
        </th>
        <th></th>
    </tr>
    @if (Model == null || Model.Count() == 0)
    {
        <tr>
            <td colspan="5">
                No rows match search criteria
            </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Lift)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HydOilPSI)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HydOilKG)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Insulated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DesignVoltage)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Lift }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Lift }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Lift })
                </td>
            </tr>
        }
    }
</table>

<div align="left">
    <p>
        @Html.ActionLink("Back to DataPlates Index", "Index", "Home")
    </p>
</div>

