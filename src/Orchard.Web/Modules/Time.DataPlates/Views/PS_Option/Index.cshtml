@model IEnumerable<Time.Data.EntityModels.DataPlates.PS_Option>

@{
    ViewBag.Title = "PS Option Index";
}

<h2>@ViewBag.Title</h2>

<div align="left">
    <p>
        @Html.ActionLink("Back to DataPlates Index", "Index", "Home")
    </p>
</div>

<p>
    @Html.ActionLink("Create New PS Option", "Create")
</p>

@using (Html.BeginForm("Index", "PS_Option", FormMethod.Get))
{
    <div class="row">
        <div class="col-md-1">@Html.Label("Search By Option:")</div>
        <div class="col-md-4">@Html.TextBox("search")</div>
        <div class="col-md-4">
            <input type="submit" value="Search" class="btn btn-default" />
        </div>
    </div>
}
<br />
<table class="table table-striped table-bordered table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Option)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlatformQty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HRUpperControls)
        </th>
        <th></th>
    </tr>
    @if (Model == null || Model.Count() == 0)
    {
        <tr>
            <td colspan="3">
                No rows match search criteria
            </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Option)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PlatformQty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HRUpperControls)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Option }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Option }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Option })
                </td>
            </tr>
        }
    }
</table>

<div align="left">
    <p>
        @Html.ActionLink("Back to DataPlates Index", "Index", "Home")
    </p>
</div>

