@model IEnumerable<Time.Data.EntityModels.OrderLog.Installer>

@{
    ViewBag.Title = "Installers Index";
}

@Html.Partial("_Menu", ViewBag.Permissions as Time.OrderLog.Models.MenuViewModel)

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Add a New Installer", "Create", "Installer", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-bordered table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.InstallerName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InstallerName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.InstallerId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.InstallerId })
            </td>
        </tr>
    }

</table>
