@model IEnumerable<Time.Data.EntityModels.OrderLog.Region>

@{
    ViewBag.Title = "Regions";
}

@Html.Partial("_Menu", ViewBag.Permissions as Time.OrderLog.Models.MenuViewModel)

<h2>@ViewBag.Title</h2>
<hr />
<div>
    @Html.ActionLink("Add a New Region", "Create", "Region", null, new { @class = "btn btn-primary" })
</div>
<hr />
<table class="table table-striped table-bordered table-condensed">
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.RegionName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RegionName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.RegionId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.RegionId })
            </td>
        </tr>
    }

</table>
