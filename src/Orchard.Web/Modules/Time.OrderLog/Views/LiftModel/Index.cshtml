@model IEnumerable<Time.Data.EntityModels.OrderLog.LiftModel>

@{
    ViewBag.Title = "Lift Models";
}

@Html.Partial("_Menu", ViewBag.Permissions as Time.OrderLog.Models.MenuViewModel)

<h2>@ViewBag.Title</h2>
<hr />
<p>
    @Html.ActionLink("Add a Lift Model", "Create", "LiftModel", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-bordered table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LiftModelName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LiftModelName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.LiftModelId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.LiftModelId })
            </td>
        </tr>
    }

</table>
