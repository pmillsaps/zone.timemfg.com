@model Time.Data.EntityModels.Configurator.SpecialConfig

@{
    ViewBag.Title = "Special Config Details";
}

<h2>@ViewBag.Title</h2>

<div>
    <h4>Special Config</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Customer:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SpecialCustomer.Name)
        </dd>
        <dt>
            Configuration:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>

<hr />

<h4>Special Data</h4>

<p>
    @Html.ActionLink("Add Special Data", "Add_Data", new { id = Model.Id }) ||| @Html.ActionLink("Copy All Special Data", "Copy_Data", new { id = Model.Id })
</p>

<table class="table table-striped table-bordered table-condensed">
    <tr>
        <th>
            Part
        </th>
        <th>
            Quantity
        </th>
        <th>
            Price
        </th>
        <th>
            1. Assembly/2. Material
        </th>
        <th>
            Operation
        </th>
        <th></th>
    </tr>
    @foreach (var item in ViewBag.SpecialData as IEnumerable<Time.Data.EntityModels.Configurator.SpecialData>)
    {
        <tr>
            <td>
                @item.Part
            </td>
            <td>
                @item.Quantity
            </td>
            <td>
                @item.Price
            </td>
            <td>
                @item.SpecialDataTypeId
            </td>
            <td>
                @item.RelatedOpId
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit_Data", new { id = @item.Id }) | 
                @Html.ActionLink("Delete", "Delete", "SpecialDatas", new { id = item.Id }, null)
            </td>
        </tr>
    }
</table>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
