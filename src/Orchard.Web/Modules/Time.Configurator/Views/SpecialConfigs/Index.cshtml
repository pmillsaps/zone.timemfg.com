@model IEnumerable<Time.Data.EntityModels.Configurator.SpecialConfig>

@{
    ViewBag.Title = "Special Configs Index";
}

<div align="right">
    <p>
        @Html.ActionLink("To Special Customers", "Index", "SpecialCustomers")|||
        @Html.ActionLink("To Special Datas", "Index", "SpecialDatas")|||
        @Html.ActionLink("Back to Configurator Index", "Index", "Configurator")
    </p>
</div>

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New Special Config", "Create")
</p>


<table class="table table-striped table-bordered table-condensed">
    <tr>
        <th>
            Special Customer Name
        </th>
        <th>
            Special Config Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SpecialCustomer.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>

<div align="right">
    <p>
        @Html.ActionLink("Back to Configurator Index", "Index", "Configurator")
    </p>
</div>