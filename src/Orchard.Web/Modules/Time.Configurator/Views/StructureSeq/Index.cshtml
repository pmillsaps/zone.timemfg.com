@model IEnumerable<Time.Data.EntityModels.Configurator.StructureSeq>

@{
    ViewBag.Title = "Structure Sequence Index";
}

<h2>@ViewBag.Title</h2>

<div align="right">
    <p>
        @Html.ActionLink("Back to Configurator Index", "Index", "Configurator")
    </p>
    <p>
        @Html.ActionLink("Back to Structures Index", "Index", "Structure")
    </p>
</div>

<p>
    @Html.ActionLink("Create New Structure Sequence", "Create")
</p>

@using (Html.BeginForm("Index", "StructureSeq", FormMethod.Get))
{

    <div class="row">
        <div class="col-md-3">@Html.DropDownList("ConfigNames", optionLabel: "-- Select ConfigName --")</div>
        <div class="col-md-3">@Html.DropDownList("ConfigData", optionLabel: "-- Select ConfigData --")</div>
        <div class="col-md-3"><input type="submit" value="Search" class="btn btn-primary" /></div>
    </div>
}

<br />

<table class="table table-striped table-bordered table-condensed table-hover">
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.ConfigName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ConfigData)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sequence)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lookup)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LookupSequence)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Global)
        </th>
        <th></th>
    </tr>

    @if (Model == null || Model.Count() == 0)
    {
        <tr>
            <td colspan="8">
                No rows match search criteria
            </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ConfigName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ConfigData)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sequence)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lookup)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LookupSequence)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Global)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    }
</table>

<div align="right">
    <p>
        @Html.ActionLink("Back to Configurator Index", "Index", "Configurator")
    </p>
</div>