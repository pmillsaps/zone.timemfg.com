@model Time.Data.EntityModels.Configurator.PartOverride

@{
    ViewBag.Title = "Create Part Override";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
