@model IEnumerable<Time.Data.EntityModels.Configurator.ConfigPricing>

@{
    ViewBag.Title = "Config Pricing";
}

<h2>@ViewBag.Title</h2>

<div align="right">
    <p>
        @Html.ActionLink("Back to Configurator Index", "Index", "Configurator")
    </p>
</div>

@using (Html.BeginForm("Index", "ConfigPricing", FormMethod.Get))
{

    <div class="row">
        <div class="col-md-3">@Html.DropDownList("ConfigNames", optionLabel: "-- Select ConfigName--")</div>
        <div class="col-md-3">@Html.DropDownList("ConfigOptions", optionLabel: "-- Select ConfigOption--")</div>
        <div><input type="submit" value="Search" class="btn btn-primary" /></div>
    </div>
}

<br />

<p>
    @Html.ActionLink("Create New Pricing", "Create") &nbsp;|&nbsp;
    @Html.ActionLink("Import Pricing", "ImportPricing") &nbsp;|&nbsp;
    @Html.ActionLink("Export to Excel", "ConfigPricingExport")
</p>
<table class="table table-striped table-bordered table-condensed table-hover">
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.ConfigID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ConfigOption)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AltPrice)
        </th>
        <th></th>
    </tr>

    @if (Model == null || Model.Count() == 0)
    {
        <tr>
            <td colspan="5">
                No rows match search criteria
            </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.ConfigID)
                </td>
                <td>
                    @Html.DisplayFor(model => item.ConfigOption)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AltPrice)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ConfigID.Trim(), opt = item.ConfigOption }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ConfigID.Trim(), opt = item.ConfigOption }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ConfigID.Trim(), opt = item.ConfigOption })
                </td>
            </tr>
        }
    }
</table>

<div align="right">
    <p>
        @Html.ActionLink("Back to Configurator Index", "Index", "Configurator")
    </p>
</div>
