@model IEnumerable<Time.Data.EntityModels.Configurator.ConfigPricing>

@{
    ViewBag.Title = "ConfigPricingViewToExport";
}

<h2>ConfigPricing Export to Excel</h2>

<div align="right">
    <p>
        @Html.ActionLink("Back to Configurator Index", "Index", "Configurator")
    </p>
</div>
<p>
    @Html.ActionLink("Back to ConfigPricing Index", "Index")
</p>
<h4>Select the Configurator to export pricing to Excel</h4>
<hr />

@using (Html.BeginForm("ConfigPricingExport", "ConfigPricing", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row">
        <div class="col-md-3">@Html.DropDownList("ConfigNames", optionLabel: "-- Select ConfigName--")</div>
        <div><input type="submit" value="Export to Excel" class="btn btn-primary" /></div>
    </div>
}

