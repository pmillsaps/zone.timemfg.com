@model IEnumerable<Time.Data.EntityModels.Configurator.SpecialCustomer>

@{
    ViewBag.Title = "Special Customers Index";
}

<div align="right">
    <p>
        @Html.ActionLink("To Special Configs", "Index", "SpecialConfigs")|||
        @Html.ActionLink("To Special Data", "Index", "SpecialDatas")|||
        @Html.ActionLink("Back to Configurator Index", "Index", "Configurator")
    </p>
</div>

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New Special Customer", "Create")
</p>
<table class="table table-striped table-bordered table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

<div align="right">
    <p>
        @Html.ActionLink("Back to Configurator Index", "Index", "Configurator")
    </p>
</div>