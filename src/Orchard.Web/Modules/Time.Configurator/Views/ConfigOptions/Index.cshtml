@model IEnumerable<Time.Data.EntityModels.Configurator.ConfigOption>

@{
    ViewBag.Title = "Config Options Index";
}

<h2>@ViewBag.Title</h2>

<div align="right">
    <p>
        @Html.ActionLink("Back to Configurator Index", "Index", "Configurator")
    </p>
</div>

@*<p>
    @Html.ActionLink("Create New Config Option", "Create")
</p>*@

@using (Html.BeginForm("Index", "ConfigOptions", FormMethod.Get))
{
    <div class="row">
        <div class="col-md-8">
            <b>PartNum Display:&nbsp;</b>           
            @Html.RadioButton("display", "All", true) <text>All&nbsp;</text>
            @Html.RadioButton("display", "New") <text>New Only&nbsp;</text>
            @Html.RadioButton("display", "Eng") <text>Engineered Only&nbsp;</text>
            @Html.RadioButton("display", "NoPick") <text>No-Pick Only&nbsp;</text>
            @Html.RadioButton("display", "NoPart") <text>No-Part Only&nbsp;</text>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-3">@Html.DropDownList("ConfigNames", optionLabel: "-- Select ConfigName --")</div>
        <div class="col-md-3">@Html.DropDownList("ConfigData", optionLabel: "-- Select ConfigData --")</div>
        <div><input type="submit" value="Search" class="btn btn-default" /></div>
    </div>
}

<br />
<div>
    <h4 class="text-info">Key Descriptions:</h4>
</div>
@{ int count = 1; }
@if (ViewBag.Notes != null)
{
    foreach (var item in ViewBag.Notes as IEnumerable<Time.Data.EntityModels.Configurator.StructureSeq>)
    {
        if (count < 10)
        {
            <div>
                <b>Key 0@(count) :</b>&nbsp;&nbsp;&nbsp;@item.Notes
            </div>
        }
        else
        {
            <div>
                <b>Key @(count) :</b>&nbsp;&nbsp;&nbsp;@item.Notes
            </div>
        }

        count++;
    }
}

<br />
<table class="table table-striped table-bordered table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ConfigName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ConfigData)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Key01)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Key02)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Key03)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Key04)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Key05)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Key06)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Key07)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Key08)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Key09)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Key10)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PartNum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InActive)
        </th>
        <th></th>
    </tr>

    @if (Model == null || Model.Count() == 0)
    {
        <tr>
            <td colspan="15">
                No rows match search criteria
            </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ConfigName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ConfigData)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Key01)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Key02)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Key03)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Key04)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Key05)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Key06)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Key07)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Key08)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Key09)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Key10)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PartNum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InActive)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    }
</table>
