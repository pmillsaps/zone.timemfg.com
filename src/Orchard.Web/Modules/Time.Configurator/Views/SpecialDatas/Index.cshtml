@model IEnumerable<Time.Data.EntityModels.Configurator.SpecialData>

@{
    ViewBag.Title = "Special Data Index";
}

<div align="right">
    <p>
        @Html.ActionLink("To Special Customers", "Index", "SpecialCustomers")|||
        @Html.ActionLink("To Special Configs", "Index", "SpecialConfigs")|||
        @Html.ActionLink("Back to Configurator Index", "Index", "Configurator")
    </p>
</div>

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New Blank Special Data", "Create") |||
    @Html.ActionLink("Export to Excel", "Export") |||
    @Html.ActionLink("Import Special Data", "Import")
</p>

<br />

<div class="row">
    @using (Html.BeginForm("Index", "SpecialDatas", FormMethod.Get))
    {
        <div class="col-md-4">
            <div class="input-group">
                @Html.DropDownList("SpecialConfigId", optionLabel: "--- Select Customer ---")
                <span class="input-group-btn">
                    <button class="btn btn-primary" type="submit">Go!</button>
                </span>
            </div>
        </div>
        @*<div>
            <div style="float: left; width: 250px" class="col-md-3">@Html.DropDownList("SpecialConfigId", optionLabel: "--- Select Customer ---")</div>
            <div style="float: left; width: 75px"><input type="submit" value="Search" class="btn btn-primary" stlye="" /></div>
        </div>*@
    }

    @using (Html.BeginForm("Create", "SpecialDatas", FormMethod.Get))
    {
        <div style="float: left; width: 100px">
            <div class="col-md-3" style="display:none">@Html.DropDownList("SpecialConfigId", optionLabel: "---Select Customer ---")</div>
            <div><input type="submit" value="Create Current Selection" class="btn btn-primary col-sm-offset-3" /></div>
        </div>
    }
</div>

<hr />

<table class="table table-striped table-bordered table-condensed table-hover">
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.Part)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            Special Config
        </th>
        <th>
            Special Data Type
        </th>
        <th>
            Related Operation
        </th>
        <th></th>
    </tr>

    @if (Model == null || Model.Count() == 0)
    {
        <tr>
            <td colspan="7">
                No rows match search criteria
            </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Part)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SpecialConfig.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SpecialDataType.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SpecialRelatedOp.Operation)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    }
</table>

<div align="right">
    <p>
        @Html.ActionLink("Back to Configurator Index", "Index", "Configurator")
    </p>
</div>