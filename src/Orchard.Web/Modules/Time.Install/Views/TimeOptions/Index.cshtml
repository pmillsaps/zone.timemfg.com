@model IEnumerable<Time.Data.EntityModels.Install.TimeOption>

@{
    ViewBag.Title = "Time Options with Install Hours Index";
}

<h2>@ViewBag.Title</h2>

<div align="right">
    @Html.ActionLink("Back to VSW Install Index", "Index", "Home")
</div>

<p>
    @Html.ActionLink("Create New Time Option", "Create")
</p>

<div class="alert alert-danger">
    <p><strong>Note: </strong>When importing Time options, they must be imported individually. For example, you cannot import an option in this format: <strong>VK-1400-5/6/7/8</strong>.</p>
    <p>It must be split, in this case, in four different options: <strong>VK-1400-5, VK-1400-6, VK-1400-7</strong>, and <strong>VK-1400-8</strong> .</p>
</div>
<hr />
@using (Html.BeginForm("Index", "TimeOptions", FormMethod.Get))
{
    <div class="row">
        <div class="col-md-3">@Html.DropDownList("LiftFamilyId", optionLabel: "--- Select Lift Family ---")</div>
        <div class="col-md-4">
            <input type="submit" value="Search " class="btn btn-primary" />
        </div>
    </div>
}
<hr />
<table class="table table-striped">
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.Option)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LaborHours)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaintFlag)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LiftFamily.FamilyName)
        </th>
        <th></th>
    </tr>

    @if (Model == null || Model.Count() == 0)
    {
        <tr class="lead">
            <td colspan="4">
                No rows match search criteria
            </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Option)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LaborHours)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaintFlag)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LiftFamily.FamilyName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    }

</table>
