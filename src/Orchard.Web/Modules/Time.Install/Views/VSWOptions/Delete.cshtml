@model Time.Data.EntityModels.Install.VSWOption

@{
    ViewBag.Title = "Delete";
}

<link href="~/Modules/Time.IT/Styles/customStyle.css" rel="stylesheet" />

<h2>Delete</h2>

<div align="right">
    @Html.ActionLink("Back to Main Menu", "Index", "Home")
</div>
<hr />
<h3>Are you sure you want to delete this?</h3>


<div class="mypanel-header"><h4>VSW Option</h4></div>
<div class="mypanel-body">
    <div class="alert alert-info">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.OptionName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.OptionName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Quantity)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.InstallHours)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.InstallHours)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PaintFlag)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PaintFlag)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.LiftFamily.FamilyName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LiftFamily.FamilyName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.OptionGroup.GroupName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.OptionGroup.GroupName)
            </dd>

        </dl>

        @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-primary" /> |
                @Html.ActionLink("Back to List", "Index", new { liftFamilyId = Model.LiftFamilyId, groupId = Model.GroupId })
            </div>
        }
    </div>
</div>

@using (Script.Foot())
{
    <script type="text/javascript">
        $(document).ready(function () {
            $(".mypanel-body").slideDown(2000);
        });
    </script>
}

