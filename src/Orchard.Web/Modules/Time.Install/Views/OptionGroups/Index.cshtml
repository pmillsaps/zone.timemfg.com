@model IEnumerable<Time.Data.EntityModels.Install.OptionGroup>

@{
    ViewBag.Title = "VSW Option Group Index";
}

<link href="~/Modules/Time.IT/Styles/customStyle.css" rel="stylesheet" />

<h2>@ViewBag.Title</h2>

<div align="right">
    @Html.ActionLink("Back to Main Menu", "Index", "Home")
</div>

<div class="alert alert-info">
    <h4>The information in these pages includes:</h4>
    <p><span class="label label-primary">1.</span> VSW Option Groups.</p>
    <p><span class="label label-success">Tip:</span> Click the button <span class="label label-primary">Show Pictures</span> to display what sections of the previously used documents this page is related to.</p>
</div>
<a id="showInfo" href="#cfgsAndLifts" data-toggle="collapse" class="btn btn-primary btn-xs">Show Pictures</a>
<div id="cfgsAndLifts" class="collapse">
    <div style="display:block; height:300px; overflow:scroll;">
        @Html.Action("MoreInfo", "Home", new { documentSection = "vswOptionGroup" })
    </div>
</div>
<hr />
<div>
    <a style="margin-bottom:5px;" class="btn btn-primary btn-xs" href="@Url.Action("Create", "OptionGroups")">Create New VSW Group</a>
</div>
<table class="table table-striped table-bordered table-hover table-responsive">
    <tr class="success">
        <th class="col-md-11">
            @Html.DisplayNameFor(model => model.GroupName)
        </th>
        <th></th>
        @*<th></th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GroupName)
            </td>
            <td>
                <a href="@Url.Action("Edit", "OptionGroups", new { id = item.Id })"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
            </td>
            @*<td>
                <a href="@Url.Action("Details", "OptionGroups", new { id = item.Id })"><i class="fa fa-eye" aria-hidden="true"></i></a>
            </td>*@
            <td>
                <a href="@Url.Action("Delete", "OptionGroups", new { id = item.Id })"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
            </td>
        </tr>
    }

</table>
