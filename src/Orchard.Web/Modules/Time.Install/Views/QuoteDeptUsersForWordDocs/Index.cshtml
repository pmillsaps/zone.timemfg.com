@model IEnumerable<Time.Data.EntityModels.Install.QuoteDeptUsersForWordDoc>

@{
    ViewBag.Title = "Quote Department Users Index";
}

<link href="~/Modules/Time.IT/Styles/customStyle.css" rel="stylesheet" />

<h2>@ViewBag.Title</h2>

<div align="right">
    @Html.ActionLink("Back to Main Menu", "Index", "Home")
</div>

<div class="alert alert-info">
    <h4>The information in these pages includes:</h4>
    <p><span class="label label-primary">1.</span> The Quote Department Users.</p>
    <p><span class="label label-success">Tip:</span> Click the button <span class="label label-primary">Show Pictures</span> to display what sections of the previously used documents this page is related to.</p>
</div>
<a id="showInfo" href="#cfgsAndLifts" data-toggle="collapse" class="btn btn-primary btn-xs">Show Pictures</a>
<div id="cfgsAndLifts" class="collapse">
    <div style="display:block; height:300px; overflow:scroll;">
        @Html.Action("MoreInfo", "Home", new { documentSection = "quoteDeptUsers" })
    </div>
</div>

<hr />

<div>
    <a style="margin-bottom:5px;" class="btn btn-primary btn-xs" href="@Url.Action("Create", "QuoteDeptUsersForWordDocs")">Create New User</a>
</div>

<table class="table table-striped table-bordered table-hover table-responsive">
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PositionTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fax)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PositionTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fax)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            <a href="@Url.Action("Edit", "QuoteDeptUsersForWordDocs", new { id = item.Id })"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
        </td>
        <td>
            <a href="@Url.Action("Delete", "QuoteDeptUsersForWordDocs", new { id = item.Id })"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
        </td>
    </tr>
}

</table>

@using (Script.Foot())
{
    <script type="text/javascript">

        $("#showInfo").click(function () {
            if ($(this).text() == "Show Pictures") {
                $(this).text("Hide Pictures");
            } else {
                $(this).text("Show Pictures");
            }
        });
    </script>
}
