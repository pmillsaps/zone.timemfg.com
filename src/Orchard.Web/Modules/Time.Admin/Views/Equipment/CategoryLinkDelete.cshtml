@model Time.Admin.Models.CategoryDeleteVM

@{
    ViewBag.Title = "Category Link Delete";
}

<h2>@ViewBag.Title</h2>

<h3>Are you sure you want to delete this Category link from this Model?</h3>
<div>
    <h4>Versalift Lift Model</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.CategoryName)
            &nbsp;
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Lift.Model)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Lift.Model)
            &nbsp;
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Lift.Image)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Lift.Image)
            &nbsp;
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Lift.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Lift.Description)
            &nbsp;
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Lift.Height)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Lift.Height)
            &nbsp;
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Lift.isVisible)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Lift.isVisible)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Lift.CreateDate)
        </dt>

