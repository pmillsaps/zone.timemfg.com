@model IEnumerable<Time.Admin.EntityModels.Versalift.VersaliftLiftModel>

@{
    ViewBag.Title = "Manage Versalift.com Equipment List";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Add New Lift", "Create")
</p>
<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            @*<th>
                    @Html.DisplayNameFor(model => model.BaseModelID)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Image)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Height)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isVisible)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Condor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VideoURL)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                        @Html.DisplayFor(modelItem => item.BaseModelID)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Image)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Height)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isVisible)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Condor)
                </td>
                <th>
                    @Html.DisplayFor(modelItem => item.VideoURL)
                </th>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ModelID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ModelID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ModelID })
                </td>
            </tr>
        }
    </tbody>
</table>
