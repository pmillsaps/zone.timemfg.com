@model IEnumerable<Time.Admin.EntityModels.Versalift.VersaliftLiftCategory>

@*<p>
    @Html.ActionLink("Create New Category Link", "CategoryLinkCreate", new { id = ViewBag.ModelId })
</p>*@


    @foreach (var item in (List<String>)ViewBag.CategoryGroups)
    {
        <p>
            @Html.ActionLink(String.Format("Create New {0} Category Link", item), "CategoryLinkCreate", new { id = ViewBag.ModelId, Group = item })
        </p>
    }


<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryParentID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isEnabled)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sequence)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryGroup)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryParentID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isEnabled)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sequence)
                </td>
                <td>
                    @Html.ActionLink("Delete", "CategoryLinkDelete", new { id = item.CategoryID, ModelId = ViewBag.ModelId })
                </td>
            </tr>
        }
    </tbody>
</table>
