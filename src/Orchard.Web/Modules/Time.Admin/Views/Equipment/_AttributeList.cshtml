@model IEnumerable<Time.Admin.EntityModels.Versalift.VersaliftLiftModelAttribute>

<p>
    @Html.ActionLink("Add Attribute", "AttributeCreate", new { ModelId = ViewBag.ModelId })
</p>
<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VersaliftLiftModel.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VersaliftLiftModelAttributeType.AttributeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rank)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isVisible)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(x => x.Rank))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.VersaliftLiftModel.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VersaliftLiftModelAttributeType.AttributeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rank)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isVisible)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>

                <td>
                    @Html.ActionLink("Edit", "AttributeEdit", new { id = item.AttributeID }) |
                    @Html.ActionLink("Delete", "AttributeDelete", new { id = item.AttributeID })
                </td>
            </tr>
        }
    </tbody>
</table>
