@model IEnumerable<Time.Data.EntityModels.CustomManuals.LiftOption>

@{
    ViewBag.Title = "Lift Options Index";
}

<h2>@ViewBag.Title</h2>

<div align="left">
    <p>
        @Html.ActionLink("Back to Custom Manuals Index", "Index", "Home")
    </p>
</div>

<br />

<div class="row">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken();

        <p>
            Search by Option and Short Title
        </p>
        
        <div class="form-group">
            <div class="col-md-2">
                @Html.TextBox("search")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-1">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </div>
    }
</div>

<br />

<p>
    @Html.ActionLink("Create New Lift Option", "Create")
</p>

<table class="table table-striped table-bordered table-condensed table-hover">
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.OptionNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShortTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Active)
        </th>
        <th></th>
    </tr>
    @if (Model == null || Model.Count() == 0)
    {
        <tr>
            <td colspan="7">
                No rows match search criteria
            </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OptionNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShortTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Active)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    }
</table>

<div align="left">
    <p>
        @Html.ActionLink("Back to Custom Manuals Index", "Index", "Home")
    </p>
</div>