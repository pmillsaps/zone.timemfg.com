            @Html.DisplayNameFor(model => model.UnitPrice2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitPrice3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitPrice4)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitPrice5)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitPrice6)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DrawingDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DrawingRevision)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DrawingSize)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PartsExpediteFlag)
        </th>

        @*<th>
                @Html.DisplayNameFor(model => model.LiftRequired3)
            </th>*@

    </tr>

