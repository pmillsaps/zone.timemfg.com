<table class="table table-striped table-bordered table-condensed">
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.PartNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vendor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vendor2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vendor3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VendorPartNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdditionalDescription)
        </th>
