@model IEnumerable<Time.Data.EntityModels.Legacy.Inventory>

@{
    ViewBag.Title = "Legacy Part Search";
}

<h2>@ViewBag.Title</h2>
<hr />
@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()
    <h4>Search by Part Number, Description, Vendor Part Number, Additional Description, or Additional Description 2.</h4>
    <div class="row">
        <div class="col-xs-4">
            <div class="input-group">
                @Html.TextBox("search", null, htmlAttributes: new { @placeholder = "Search..." })
                <span class="input-group-btn">
                    <button class="btn btn-primary" type="submit">Go!</button>
                </span>
            </div>
        </div>
    </div>
