@model Time.Data.EntityModels.Legacy.Inventory

@{
    ViewBag.Title = "Details for " + Model.PartNumber;
    ViewBag.Description = "Description: " + Model.Description;
}

<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Description</h3>

<p>
    <a href="javascript:history.back()">Back to List</a>
</p>

<hr />

<h4>Step Details</h4>
<div class="col-md-2">
    <table class="table table-striped table-bordered table-condensed table-hover">
        <tr class="success">
            <th>
                Cost
            </th>
            <th>
                Lab
            </th>
        </tr>
        @foreach (var item in ViewBag.Step as IEnumerable<Time.Data.EntityModels.Legacy.PartStep>)
        {
            @Html.Partial("_PartStep", item);
        }
    </table>
</div>
<table class="table table-striped table-bordered table-condensed table-hover">
    <tr class="success">
        <th>
            CostStepListingId
        </th>
        <th>
            BaseQty
        </th>
        <th>
            CrewSize
        </th>
        <th>
            Description
        </th>
        <th>
            FixedHours
        </th>
        <th>
            Id
        </th>
        <th>
            OpCode
        </th>
        <th>
            PartStep
        </th>
        <th>
            RecEOQ
        </th>
        <th>
            Step
        </th>
        <th>
            VarHours
        </th>
        <th>
            WorkCenter
        </th>
    </tr>
    @foreach (var item in ViewBag.StepDetails as IEnumerable<Time.Data.EntityModels.Legacy.PartStepDetail>)
    {
        @Html.Partial("_PartStepDetails", item);
    }
</table>

<h4>Purchased BOM</h4>
<p>If there are multiple vendors, the list is sorted by vendors.</p>

<table class="table table-striped table-bordered table-condensed table-hover">
    <tr class="success">
        <th>
            ULPartNumber
        </th>
        <th>
            Description
        </th>
        <th>
            Id
        </th>
        <th>
            LineNumber
        </th>
        <th>
            PartNumber
        </th>
        <th>
            PurchaseBOMId
        </th>
        <th>
            Qty
        </th>
        <th>
            TimePartNumber
        </th>
        <th>
            VendorNumber
        </th>
    </tr>
    @foreach (var item in ViewBag.PurchasedBOMItem as IEnumerable<Time.Data.EntityModels.Legacy.PurchaseBOMItem>)
    {
        @Html.Partial("_PurchasedBOMItem", item);
    }
</table>

<h4>Cross References</h4>

<div class="col-md-2">
    <table class="table table-striped table-bordered table-condensed table-hover">
        <tr class="success">
            <th>
                NewPart
            </th>
            <th>
                OldPart
            </th>
        </tr>
        @foreach (var item in ViewBag.PartXRef as IEnumerable<Time.Data.EntityModels.Legacy.PartXRef>)
        {
            @Html.Partial("_PartXRef", item);
        }
    </table>
    <p>Redrill Part Cross Reference:</p>
</div>

<table class="table table-striped table-bordered table-condensed table-hover">
    <tr class="success">
        <th>
            AptCart
        </th>
        <th>
            CADbom
        </th>
        <th>
            CADdb
        </th>
        <th>
            CADRev
        </th>
        <th>
            CADSize
        </th>
        <th>
            Comments
        </th>
        <th>
            DrawingNumber
        </th>
        <th>
            DrawingRev
        </th>
        <th>
            DrawingSize
        </th>
        <th>
            DwgBOM
        </th>
        <th>
            LineDrawing
        </th>
        <th>
            LineDrawingBOM
        </th>
        <th>
            LineDrawingRevision
        </th>
        <th>
            LineDrawingSize
        </th>
        <th>
            RedrillPartNumber
        </th>
    </tr>
    @foreach (var item in ViewBag.Redrill as IEnumerable<Time.Data.EntityModels.Legacy.RedrillPartXRef>)
    {
        @Html.Partial("_RedrillPartXRef", item);
    }
</table>

<h4>Purchase History</h4>
<table class="table table-striped table-bordered table-condensed table-hover">
    <tr class="success">
        <th>
            Company
        </th>
        <th>
            Id
        </th>
        <th>
            PartNumber
        </th>
        <th>
            PO_Line_Number
        </th>
        <th>
            PO_Number
        </th>
        <th>
            Qty
        </th>
        <th>
            ReceiptDate
        </th>
        <th>
            ReceiptQty
        </th>
        <th>
            SupplierId
        </th>
        <th>
            SupplierName
        </th>
        <th>
            SupplierNumber
        </th>
    </tr>
    @foreach (var item in ViewBag.PurchaseHistory as IEnumerable<Time.Data.EntityModels.Legacy.PurchaseHistory>)
    {
        @Html.Partial("_PurchaseHistory", item);
    }
</table>

<br />
<hr />

<p>
    <a href="javascript:history.back()">Back to List</a>
</p>








