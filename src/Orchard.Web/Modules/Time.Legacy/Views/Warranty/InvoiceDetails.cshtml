@model Time.Legacy.EntityModels.Legacy.WarrantyInvoice

@{
    ViewBag.Title = "Details for Invoice: #" + Model.InvoiceNumber;
    Script.Require("jQueryUI_Accordion").AtFoot();
}
<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<h2>@ViewBag.Title</h2>

<p>
    <a href="javascript:history.back()">Back to Details</a>
</p>

<br />

<hr />

<div id="accordion">
    <h4>Customer Information</h4>
    <div>
        <table class="table-condensed table-striped table-hover" style="float: left">
            <tr>
                <th>
                    Customer #:
                </th>
                <td>
                    @Html.DisplayName((string)ViewBag.CustomerInfo.CustomerNumber)
                </td>
            </tr>
            <tr>
                <th>
                    Name:
                </th>
                <td>
                    @Html.DisplayName((string)ViewBag.CustomerInfo.CustomerName)
                </td>
            <tr />
            <tr>
                <th>
                    Address 1:
                </th>
                <td>
                    @Html.Raw(Html.Encode(ViewBag.CustomerInfo.CustomerAddress))
                </td>
            </tr>
            <tr>
                <th>
                    Address 2:
                </th>
                <td>
                    @Html.Raw(Html.Encode(ViewBag.CustomerInfo.CustomerAddress2))
                </td>
            </tr>
            <tr>
                <th>
                    Address 3:
                </th>
                <td>
                    @Html.Raw(Html.Encode(ViewBag.CustomerInfo.CustomerAddress3))
                </td>
            </tr>
            <tr>
                <th>
                    ShipTo Code:
                </th>
                <td>
                    @Html.DisplayName((string)ViewBag.CustomerInfo.ShipToCode)
                </td>
            </tr>
            <tr>
                <th>
                    Customer Order #:
                </th>
                <td>
                    @Html.DisplayName((string)ViewBag.CustomerInfo.CustomerOrderNumber)
                </td>
            </tr>
            <tr>
                <th>
                    Last Order #:
                </th>
                <td>
                    @Html.DisplayName((string)ViewBag.CustomerInfo.LastOrderNumber)
                </td>
            </tr>
            <tr>
                <th>
                    Lift Order #:
                </th>
                <td>
                    @Html.DisplayName((string)ViewBag.CustomerInfo.LiftOrderNumber)
                </td>
            </tr>
        </table>
        <table class="table-condensed table-striped table-hover" style="display: inline-block">
            <tr>
                <th>
                    Company #:
                </th>
                <td>
                    @Html.DisplayName((string)ViewBag.CustomerInfo.CompanyId)
                </td>
            </tr>
            <tr>
                <th>
                    Serial #:
                </th>
                <td>
                    @Html.DisplayName((string)ViewBag.CustomerInfo.SerialNumber)
                </td>
            </tr>
            <tr>
                <th>
                    Batch #:
                </th>
                <td>
                    @Html.DisplayName((string)ViewBag.CustomerInfo.BatchNumber)
                </td>
            </tr>
            <tr>
                <th>
                    Order Type:
                </th>
                <td>
                    @Html.DisplayName((string)ViewBag.CustomerInfo.OrderType)
                </td>
            </tr>
            <tr>
                <th>
                    Drop Ship:
                </th>
                <td>
                    @Html.DisplayName((string)ViewBag.CustomerInfo.DropShipFlag)
                </td>
            </tr>
            <tr>
                <th>
                    Ship Via:
                </th>
                <td>
                    @Html.DisplayName((string)ViewBag.CustomerInfo.ShipVia)
                </td>
            </tr>
            <tr>
                <th>
                    Date Ordered:
                </th>
                <td>
                    @Html.Raw(Html.Encode(ViewBag.CustomerInfo.DateOrdered))
                </td>
            </tr>
            <tr>
                <th>
                    Date Invoiced:
                </th>
                <td>
                    @Html.Raw(Html.Encode(ViewBag.CustomerInfo.DateInvoiced))
                </td>
            </tr>
            <tr>
                <th>
                    Date Shipped:
                </th>
                <td>
                    @Html.Raw(Html.Encode(ViewBag.CustomerInfo.DateShipped))
                </td>
            </tr>
        </table>
    </div>
    <h4>ShipTo Information</h4>
    <div>
        <table class="table-condensed">
            <tr>
                <th>
                    Name:
                </th>
                <td>
                    @Html.DisplayName((string)ViewBag.ShipTo.ShipToName)
                </td>
            <tr />
            <tr>
                <th>
                    Address 1:
                </th>
                <td>
                    @Html.Raw(Html.Encode(ViewBag.ShipTo.Address))
                </td>
            </tr>
            <tr>
                <th>
                    Address 2:
                </th>
                <td>
                    @Html.Raw(Html.Encode(ViewBag.ShipTo.Address2))
                </td>
            </tr>
            <tr>
                <th>
                    Address 3:
                </th>
                <td>
                    @Html.Raw(Html.Encode(ViewBag.ShipTo.Address3))
                </td>
            </tr>
        </table>
    </div>
</div>

<hr />

