        <th>
            Location
        </th>
        <th>
            DistributionCode
        </th>
        <th>
            Kitted
        </th>
        <th>
            ProdCode
        </th>
        <th>
            KitOrdered
        </th>
        <th>
            CommunityCode
        </th>
        <th>
            MiscCode
        </th>
        <th>
            ProductCode
        </th>
        <th>
            Warehouse
        </th>
        <th>
            PriceUnit
        </th>
        <th>
            PriceExtended
        </th>
        <th>
            CostUnit
        </th>
        <th>
            Discount
        </th>
