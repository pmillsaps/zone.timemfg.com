@model IEnumerable<Time.Data.EntityModels.TimeMFG.LoadListComment>

@*<h2>Special Instruction History</h2>*@

<table class="Comments table table-striped table-bordered table-condensed">
    <caption class="lead"><b>Special Instruction History</b></caption>
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EnteredBy)
        </th>
    </tr>
    @if (Model == null || Model.Count() == 0)
    {
        <tr>
            <td class="lead" colspan="3">
                There is no instruction history.
            </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayWithBreaksFor(modelItem => item.Comment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EnteredBy)
                </td>
            </tr>
        }
    }
</table>
