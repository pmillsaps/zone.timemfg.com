@model Time.Epicor.ViewModels.V8WhereUsedBomVM

@{
    ViewBag.Title = "Vantage 8 Where Used / BOM Search";
}

<div class="container">
    <h2>@ViewBag.Title</h2>

    @using (Html.BeginForm())
    {

        @Html.AntiForgeryToken()
        <hr />
        <div class="row">
            <div class="col-md-4">
                <div class="input-group">
                    @Html.TextBoxFor(model => model.Search, null, htmlAttributes: new { @placeholder="Search for..." })
                    <span class="input-group-btn">
                        <button class="btn btn-primary" type="submit">Go!</button>
                    </span>
                </div>
            </div>
        </div>
        <hr />
    }
    <div>
        @{ Html.RenderAction("_BOM", new { vm = Model }); }
    </div>
    <div>
        @{ Html.RenderAction("_WhereUsed", new { vm = Model }); }
    </div>
</div>