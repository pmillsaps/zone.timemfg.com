@model Time.Data.EntityModels.ITInventory.MaintenanceData

@{
    ViewBag.Title = "Delete";
}
<link href="~/Modules/Time.IT/Styles/style.css" rel="stylesheet" />

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div class="alert alert-info">
    <p>
        <span class="label label-warning">Notice:</span> Before you delete this record you first need to delete its <i>Details</i> from the <i>IT Maintenance Details</i> list.
        Otherwise, you'll get an error.
    </p>
</div>
<div class="alert alert-info">
    <h4>IT Maintenance</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.MaintDataCompany.CompanyName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaintDataCompany.CompanyName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BudgetItem)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BudgetItem)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Supplier)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Supplier)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AccountNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AccountNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OriginalPurchDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OriginalPurchDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ComputerId)
        </dt>

        @if (ViewBag.Computer != null)
            {
            <dd>
                @Html.Raw((string)ViewBag.Computer.Name)
            </dd>
        }
        else
        {
            <dd>
                @Html.DisplayFor(model => model.ComputerId)
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.LicenseId)
        </dt>

        @if (ViewBag.License != null)
            {
            <dd>
                @Html.Raw((string)ViewBag.License.Name)
            </dd>
        }
        else
        {
            <dd>
                @Html.DisplayFor(model => model.LicenseId)
            </dd>
        }
    </dl>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-primary" /> |
        @Html.ActionLink("Back to List", "Index")
    </div>
}

