@model Time.IT.ViewModel.LinkMonitorViewModel

@{
    ViewBag.Title = "Link Monitor";
}

<h2>@ViewBag.Title</h2>
<hr />

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.UserId)
    <div class="container-fluid alert alert-info">
        <div class="row">
            <div class="col-md-12">
                <div class="form-horizontal">
                    <h4>Link Monitor</h4>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.MonitorId, "Monitor", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("MonitorId", null, htmlAttributes: new { @class = "form-control" }, optionLabel: "-- Select --")
                            @Html.ValidationMessageFor(model => model.MonitorId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to User", "Details", new { id = Model.UserId})
</div>
