@model IEnumerable<Time.Data.EntityModels.ITInventory.User>

@{
    ViewBag.Title = "User Index";
}

<h2>@ViewBag.Title</h2>

<div>
    @Html.ActionLink("Create New", "Create")
</div>

<hr />

<div class="row">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken();

        <div class="form-group">
            <div class="col-md-4">
                @Html.TextBox("search")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>
    }
</div>
<div>
    Search includes: User Name, Building Name, Notes, Location Name,
</div>

<hr />

<table class="table table-striped table-bordered table-condensed">
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            Computer
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.ComputerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CableId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SwitchPortId)
            </th>*@
        @*<th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.LastDateEdited)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastEditedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ref_Building.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ref_Location.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "Details", new { id = item.Id })
                @*@Html.DisplayFor(modelItem => item.Name)*@
            </td>
            <td>
                @if (item.Computers.Count() == 1)
                {
                    <a href="@Url.Action("Details", "Computers", new { id = item.Computers.FirstOrDefault().Id })">@item.Computers.FirstOrDefault().Name</a>
                    @*@Html.ActionLink(item.Computers.FirstOrDefault().Name, "Details", "Computer", null, new { id = item.Computers.FirstOrDefault().Id })*@
                }
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.ComputerId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CableId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SwitchPortId)
                </td>*@
            @*<td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.LastDateEdited)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastEditedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ref_Building.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ref_Location.Name)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>