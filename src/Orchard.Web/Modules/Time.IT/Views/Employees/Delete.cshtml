@model Time.Data.EntityModels.TimeMFG.Term_Employees

@{
    ViewBag.Title = "Delete Employee";
}

<h2>@ViewBag.Title</h2>

<h4>Employees</h4>

<hr />

<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            First Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FName)
        </dd>

        <dt>
            Last Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LName)
        </dd>

        <dt>
            Email
        </dt>

        @if (String.IsNullOrEmpty(Model.Email))
        {
            <dd>
                <p>-</p>
            </dd>
        }
        else
        {
            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>
        }

        <dt>
            Employed/Terminated
        </dt>

        <dd>
            @Html.Raw((Model.Terminated) ? "Terminated" : "Employed")
        </dd>

        <dt>
            Hire/Terminated Date
        </dt>

        @if (Model.TerminatedDate == null)
        {
            <dd>
                <p>-</p>
            </dd>
        }
        else
        {
            <dd>
                @Html.DisplayFor(model => model.TerminatedDate)
            </dd>
        }
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
