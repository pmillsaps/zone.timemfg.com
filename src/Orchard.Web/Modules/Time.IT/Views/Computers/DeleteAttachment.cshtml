@model Time.IT.ViewModel.UploadAttachmentViewModel

@{
    ViewBag.Title = "Delete Attachment";
}

<h2>@ViewBag.Title</h2>

<h3>Are you sure you want to delete this?</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ComputerId)
    @Html.HiddenFor(model => model.ModelId)
    @Html.HiddenFor(model => model.ModelOrComputer)
    @Html.HiddenFor(model => model.ComputerModel)
    <div>
        <div class="container-fluid alert alert-info">
            <div class="row">
                <div class="col-md-12">
                    <h4>Attachment</h4>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.FileName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.FileName)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                    </dl>

                    <div>
                        <input type="submit" value="Delete" class="btn btn-primary" /> |
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                </div>
            </div>
        </div>
    </div>
}
