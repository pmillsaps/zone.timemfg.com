                        <div class="col-md-8">
                            <div class="checkbox">
                                @Html.EditorFor(model => model.Sunday)
                                @Html.ValidationMessageFor(model => model.Sunday, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
