@model Time.Data.EntityModels.ITInventory.ScheduledTask

@{
    ViewBag.Title = "Add Scheduled Task for " + ViewBag.ComputerName;
}

<h2>@ViewBag.Title</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ComputerId)
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.LastUpdatedBy)
    @Html.HiddenFor(model => model.LastUpdatedDate)
    <div class="container-fluid alert alert-info">
        <div class="row">
