@model Time.Data.EntityModels.TimeMFG.Term_Employees

@{
    ViewBag.Title = "Delete Termination Employee";
}

<h2>@ViewBag.Title</h2>

<h4>Term_Employees</h4>

<hr />

<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        @if (String.IsNullOrEmpty(Model.Email))
        {
            <dd>
                <p>-</p>
            </dd>
        }
        else
        {
            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.Terminated)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Terminated)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TerminatedDate)
        </dt>

        @if (Model.TerminatedDate == null)
        {
            <dd>
                <p>-</p>
            </dd>
        }
        else
        {
            <dd>
                @Html.DisplayFor(model => model.TerminatedDate)
            </dd>
        }
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
